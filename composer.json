{
  "name": "atrocore/core",
  "description": "AtroCORE. Open source application.",
  "homepage": "https://atrocore.com",
  "license": "GPL-3.0-only",
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1 <8.5",
    "ext-openssl": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-zip": "*",
    "ext-gd": "*",
    "ext-mbstring": "*",
    "ext-xml": "*",
    "ext-curl": "*",
    "ext-ftp": "*",
    "ext-exif": "*",
    "ext-imagick": "*",
    "ext-fileinfo": "*",
    "gumlet/php-image-resize": "~1.9.2@stable",
    "composer/semver": "~3.3.2@stable",
    "doctrine/dbal": "~3.2.2@stable",
    "atrocore/slim": "~2.6.2",
    "atrocore/atrocore-legacy": "~1.2.6",
    "dragonmantank/cron-expression": "~1.0.3@stable",
    "monolog/monolog": "~3.8.1@stable",
    "lasserafn/php-initial-avatar-generator": "^4.4@stable",
    "zordius/lightncandy": "~0.21@stable",
    "symfony/event-dispatcher": "<=6.1.0@stable",
    "phpseclib/phpseclib": "^3.0@stable",
    "caxy/php-htmldiff": "^0.1.14@stable",
    "lazzard/php-ftp-client": "~1.7.0@stable",
    "guzzlehttp/psr7": "^2.6.2@stable",
    "symfony/mailer": "~6.4.18@stable",
    "erusev/parsedown": "^1.7@stable",
    "league/openapi-psr7-validator": "^0.22.0@stable",
    "nyholm/psr7": "^1.8@stable",
    "ramsey/uuid": "^4.7@stable",
    "tuupola/base32": "^2.0@stable",
    "symfony/yaml": "^6.4.13@stable",
    "symfony/html-sanitizer": "^6.4.13@stable",
    "twig/twig": "^3.4@stable"
  },
  "conflict": {
    "atrocore/pim": "<1.14.24",
    "atrocore/discussions": "<1.3.1",
    "microsoft-connector": "<1.0.3",
    "tbachert/spi": "*"
  },
  "autoload": {
    "psr-0": {
      "": [
        "../../../data/migrations/",
        "../../../data/module-manager-events/",
        "../../../data/custom-code/"
      ]
    },
    "psr-4": {
      "Atro\\": "app/Atro/"
    }
  },
  "extra": {
    "atroId": "Atro",
    "name": {
      "default": "Core"
    },
    "description": {
      "default": "AtroCore is a software ecosystem, designed for rapid development of web-based responsive business applications."
    }
  }
}