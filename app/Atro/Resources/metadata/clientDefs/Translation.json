{
  "controller": "controllers/record",
  "iconClass": "fas fa-pen-alt",
  "views": {
    "list": "views/translation/list"
  },
  "recordViews": {
    "list": "views/translation/record/list"
  },
  "dynamicLogic": {
    "fields": {
      "name": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "isCustomized": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "module",
              "value": "custom"
            }
          ]
        }
      }
    }
  }
}