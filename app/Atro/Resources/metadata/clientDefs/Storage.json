{
  "controller": "controllers/record",
  "iconClass": "fas fa-hdd",
  "relationshipPanels": {
    "files": {
      "create": false,
      "select": false,
      "rowActionsView": "views/record/row-actions/relationship-no-unlink"
    }
  },
  "dynamicLogic": {
    "fields": {
      "path": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "local"
              ]
            }
          ]
        },
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "local"
              ]
            }
          ]
        }
      },
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    }
  }
}