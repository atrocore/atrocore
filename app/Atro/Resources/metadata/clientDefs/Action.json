{
  "iconClass": "fas fa-play-circle",
  "controller": "controllers/record",
  "recordViews": {
    "detail": "views/action/record/detail"
  },
  "boolFilterList": [
    "notActionSet"
  ],
  "hiddenBoolFilterList": [
    "notActionSet"
  ],
  "relationshipPanels": {
    "actions": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notActionSet"
      ],
      "dragDrop": {
        "isActive": true,
        "maxSize": 20,
        "sortField": "action_set_linker_mm.sortOrder"
      },
      "view": "views/action/record/panels/actions"
    }
  },
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "sourceEntity": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "webhook",
                "set"
              ]
            },
            {
              "type": "in",
              "attribute": "usage",
              "value": [
                "entity",
                "record"
              ]
            }
          ]
        }
      },
      "inBackground": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": []
            }
          ]
        }
      },
      "massAction": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "usage",
              "value": [
                "record"
              ]
            },
            {
              "type": "isNotEmpty",
              "attribute": "sourceEntity"
            }
          ]
        }
      },
      "display": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "usage",
              "value": [
                "entity",
                "record"
              ]
            }
          ]
        }
      },
      "webhookUrl": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "webhook"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "webhook"
              ]
            }
          ]
        }
      }
    }
  }
}