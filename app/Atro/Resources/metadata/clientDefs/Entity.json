{
  "controller": "controllers/record",
  "recordViews": {
    "list": "views/admin/entity-manager/record/list"
  },
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "code": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "sortBy": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "sortDirection": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "textFilterFields": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "statusField": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "kanbanViewMode": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "statusField"
            }
          ]
        }
      },
      "kanbanStatusIgnoreList": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "kanbanViewMode"
            }
          ]
        }
      },
      "deleteWithoutConfirmation": {
        "visible": {
          "conditionGroup": [
            {
              "type": "notEquals",
              "attribute": "type",
              "value": "ReferenceData"
            }
          ]
        }
      },
      "clearDeletedAfterDays": {
        "visible": {
          "conditionGroup": [
            {
              "type": "notEquals",
              "attribute": "type",
              "value": "ReferenceData"
            }
          ]
        }
      },
      "autoDeleteAfterDays": {
        "visible": {
          "conditionGroup": [
            {
              "type": "notEquals",
              "attribute": "type",
              "value": "ReferenceData"
            }
          ]
        }
      },
      "modifiedExtendedRelations": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            },
            {
              "type": "notEquals",
              "attribute": "type",
              "value": "ReferenceData"
            }
          ]
        }
      },
      "duplicatableRelations": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            },
            {
              "type": "notEquals",
              "attribute": "type",
              "value": "ReferenceData"
            }
          ]
        }
      },
      "multiParents": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "Hierarchy"
            }
          ]
        }
      }
    }
  }
}