{
  "controller": "controllers/record",
  "recordViews": {
    "detail": "views/scheduled-job/record/detail"
  },
  "relationshipPanels": {
    "jobs": {
      "create": false,
      "select": false,
      "rowActionsView": "views/record/row-actions/relationship-no-unlink"
    }
  },
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "storage": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "job",
              "value": "ScanStorage"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "job",
              "value": "ScanStorage"
            }
          ]
        }
      }
    }
  }
}