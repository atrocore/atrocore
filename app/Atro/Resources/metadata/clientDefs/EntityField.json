{
  "controller": "controllers/record",
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "code": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "entity": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "isMultilang": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "bool",
                "array",
                "text",
                "wysiwyg",
                "multiEnum",
                "varchar",
                "markdown",
                "script"
              ]
            }
          ]
        }
      },
      "notNull": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "bool",
                "text",
                "wysiwyg",
                "float",
                "url",
                "int",
                "varchar",
                "markdown"
              ]
            }
          ]
        }
      },
      "unique": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "color",
                "datetime",
                "date",
                "email",
                "float",
                "url",
                "int",
                "varchar"
              ]
            }
          ]
        }
      },
      "index": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "color",
                "datetime",
                "date",
                "email",
                "float",
                "url",
                "int",
                "varchar"
              ]
            }
          ]
        }
      },
      "measure": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "rangeInt",
                "rangeFloat",
                "measure",
                "int",
                "float"
              ]
            }
          ]
        }
      },
      "trim": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "email"
              ]
            }
          ]
        }
      },
      "maxLength": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "email",
                "wysiwyg",
                "url",
                "text"
              ]
            }
          ]
        }
      },
      "countBytesInsteadOfCharacters": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "email",
                "wysiwyg",
                "url",
                "text",
                "markdown"
              ]
            }
          ]
        }
      },
      "pattern": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "email"
              ]
            }
          ]
        }
      },
      "setDefaultOnlyIfRequired": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar"
              ]
            },
            {
              "type": "isNotEmpty",
              "attribute": "default"
            },
            {
              "type": "isTrue",
              "attribute": "required"
            }
          ]
        }
      },
      "default": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "array",
                "bool",
                "color",
                "date",
                "datetime",
                "email",
                "enum",
                "extensibleEnum",
                "extensibleMultiEnum",
                "file",
                "float",
                "int",
                "link",
                "linkMultiple",
                "markdown",
                "measure",
                "script",
                "text",
                "url",
                "wysiwyg",
                "varchar"
              ]
            }
          ]
        }
      },
      "noEmptyString": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "array"
              ]
            }
          ]
        }
      },
      "options": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "enum",
                "multiEnum"
              ]
            }
          ]
        }
      },
      "prohibitedEmptyValue": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "color",
                "enum",
                "extensibleEnum",
                "measure",
                "language"
              ]
            }
          ]
        }
      },
      "useNumericFormat": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "date",
                "datetime"
              ]
            }
          ]
        }
      },
      "isSorted": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "enum",
                "multiEnum",
                "language",
                "multiLanguage"
              ]
            }
          ]
        }
      },
      "dropdown": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "extensibleEnum",
                "extensibleMultiEnum",
                "measure",
                "link",
                "linkMultiple"
              ]
            }
          ]
        }
      },
      "extensibleEnum": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "extensibleEnum",
                "extensibleMultiEnum"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "extensibleEnum",
                "extensibleMultiEnum"
              ]
            }
          ]
        }
      },
      "extensibleEnumOptions": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "extensibleEnum",
                "extensibleMultiEnum"
              ]
            }
          ]
        }
      },
      "fileType": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "file"
              ]
            }
          ]
        }
      },
      "previewSize": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "file"
              ]
            }
          ]
        }
      },
      "min": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "int",
                "float"
              ]
            }
          ]
        }
      },
      "max": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "int",
                "float"
              ]
            }
          ]
        }
      },
      "amountOfDigitsAfterComma": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "rangeFloat",
                "float"
              ]
            }
          ]
        }
      },
      "disableFormatting": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "int",
                "float"
              ]
            }
          ]
        }
      },
      "foreignName": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "link",
                "linkMultiple"
              ]
            }
          ]
        }
      },
      "fileTypes": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "linkMultiple"
              ]
            }
          ]
        }
      },
      "seeMoreDisabled": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "markdown",
                "wysiwyg",
                "text"
              ]
            }
          ]
        }
      }
    }
  }
}