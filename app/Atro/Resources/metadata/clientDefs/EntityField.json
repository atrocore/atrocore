{
  "controller": "controllers/record",
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "code": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "entity": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "isMultilang": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "bool",
                "array",
                "text",
                "wysiwyg",
                "multiEnum",
                "varchar",
                "markdown",
                "script"
              ]
            }
          ]
        }
      },
      "notNull": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "bool",
                "text",
                "wysiwyg",
                "float",
                "url",
                "int",
                "varchar",
                "markdown"
              ]
            }
          ]
        }
      },
      "unique": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "color",
                "datetime",
                "date",
                "email",
                "float",
                "url",
                "int",
                "varchar"
              ]
            }
          ]
        }
      },
      "index": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "color",
                "datetime",
                "date",
                "email",
                "float",
                "url",
                "int",
                "varchar"
              ]
            }
          ]
        }
      },
      "measure": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "rangeInt",
                "rangeFloat",
                "measure",
                "int",
                "float"
              ]
            }
          ]
        }
      },
      "trim": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "email"
              ]
            }
          ]
        }
      },
      "maxLength": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "varchar",
                "email",
                "wysiwyg",
                "url",
                "text"
              ]
            }
          ]
        }
      }
    }
  }
}