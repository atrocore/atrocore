{
  "controller": "controllers/file",
  "createDisabled": true,
  "iconClass": "fas fa-file",
  "boolFilterList": [
    "onlyMy",
    "onlyType",
    "onlyHidden",
    "hiddenAndUnHidden"
  ],
  "hiddenBoolFilterList": [
    "onlyType",
    "hiddenAndUnHidden"
  ],
  "views": {
    "list": "views/file/list",
    "plate": "views/file/plate"
  },
  "recordViews": {
    "detail": "views/file/record/detail",
    "list": "views/file/record/list"
  },
  "modalViews": {
    "select": "views/file/modals/select-records"
  },
  "additionalLayouts": {
    "upload": "detailSmall"
  },
  "treeScopes": [
    "Folder"
  ],
  "sidePanels": {
    "edit": [
      {
        "name": "preview",
        "label": "Preview",
        "view": "views/file/record/panels/side/preview"
      }
    ],
    "detail": [
      {
        "name": "preview",
        "label": "Preview",
        "view": "views/file/record/panels/side/preview"
      },
      {
        "name": "sharing",
        "label": "Sharing",
        "view": "views/file/record/panels/side/sharing"
      },
      {
        "name": "customDownload",
        "label": "customDownload",
        "view": "views/file/record/panels/side/download/main"
      }
    ],
    "detailSmall": [
      {
        "name": "preview",
        "label": "Preview",
        "view": "views/file/record/panels/side/preview"
      },
      {
        "name": "sharing",
        "label": "Sharing",
        "view": "views/file/record/panels/side/sharing"
      }
    ]
  },
  "menu": {
    "list": {
      "buttons": [
        {
          "acl": "read",
          "name": "list",
          "label": "",
          "link": "#File/list",
          "title": "List",
          "iconHtml": "<span class=\"fa fa-list\"></span>"
        },
        {
          "acl": "read",
          "name": "plate",
          "label": "",
          "link": "#File/plate",
          "title": "Plate",
          "iconHtml": "<span class=\"fa fa-th\"></span>"
        }
      ]
    },
    "plate": {
      "buttons": [
        {
          "acl": "read",
          "name": "list",
          "label": "",
          "link": "#File/list",
          "title": "List",
          "iconHtml": "<span class=\"fa fa-list\"></span>"
        },
        {
          "acl": "read",
          "name": "plate",
          "label": "",
          "link": "#File/plate",
          "title": "Plate",
          "iconHtml": "<span class=\"fa fa-th\"></span>"
        }
      ]
    }
  },
  "dynamicLogic": {
    "fields": {
      "storage": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "createdAt"
            }
          ]
        }
      },
      "unitSize": {
        "visible": {
          "conditionGroup" : [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      },
      "unitWidth": {
        "visible": {
          "conditionGroup" : [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      },
      "unitHeight": {
        "visible": {
          "conditionGroup" : [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      },
      "colorSpace": {
        "visible": {
          "conditionGroup" : [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      }
    }
  }
}