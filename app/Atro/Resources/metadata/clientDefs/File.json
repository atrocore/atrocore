{
  "controller": "controllers/file",
  "createDisabled": true,
  "iconClass": "file_present",
  "plateViewMode": true,
  "boolFilterList": [
    "onlyMy",
    "onlyType",
    "onlyHidden",
    "hiddenAndUnHidden"
  ],
  "hiddenBoolFilterList": [
    "onlyType",
    "hiddenAndUnHidden"
  ],
  "views": {
    "list": "views/file/list",
    "plate": "views/file/plate"
  },
  "recordViews": {
    "detail": "views/file/record/detail",
    "list": "views/file/record/list"
  },
  "modalViews": {
    "select": "views/file/modals/select-records"
  },
  "additionalLayouts": {
    "upload": "detail"
  },
  "treeScopes": [
    "Folder"
  ],
  "rightSidePanels":  [
      {
        "name": "sharing",
        "label": "Sharing",
        "view": "views/file/record/panels/side/sharing",
        "aclScope": "Sharing"
      },
      {
        "name": "customDownload",
        "label": "customDownload",
        "view": "views/file/record/panels/side/download/main"
      }
    ],
  "dynamicLogic": {
    "fields": {
      "storage": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "createdAt"
            }
          ]
        }
      },
      "unitSize": {
        "visible": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      },
      "unitWidth": {
        "visible": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      },
      "unitHeight": {
        "visible": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      },
      "colorSpace": {
        "visible": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "contains",
                  "attribute": "mimeType",
                  "value": "image/"
                },
                {
                  "type": "equals",
                  "attribute": "mimeType",
                  "value": "application/pdf"
                }
              ]
            }
          ]
        }
      }
    }
  }
}