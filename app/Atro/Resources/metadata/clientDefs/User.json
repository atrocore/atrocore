{
  "controller": "controllers/user",
  "model": "models/user",
  "recordViews": {
    "detail": "views/user/record/detail",
    "edit": "treo-core:views/user/record/edit",
    "list": "views/user/record/list"
  },
  "modalViews": {
    "detail": "views/user/modals/detail"
  },
  "iconClass": "user",
  "dynamicLogic": {
    "fields": {
      "password": {
        "required": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "passwordConfirm": {
        "required": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    }
  }
}