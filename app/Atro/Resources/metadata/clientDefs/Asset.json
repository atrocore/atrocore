{
  "controller": "dam:controllers/asset",
  "iconClass": "fas fa-archive",
  "treeScopes": [
    "AssetCategory",
    "Asset"
  ],
  "boolFilterList": [
    "notParents",
    "notChildren",
    "onlyPrivate",
    "onlyPublic",
    "linkedWithAssetCategory"
  ],
  "hiddenBoolFilterList": [
    "notParents",
    "notChildren",
    "linkedWithAssetCategory"
  ],
  "views": {
    "list": "dam:views/asset/list",
    "detail": "views/detail-tree",
    "plate": "dam:views/asset/plate"
  },
  "recordViews": {
    "plate": "dam:views/asset/record/plate",
    "plateItem": "dam:views/asset/record/plate-item",
    "detail": "dam:views/asset/record/detail"
  },
  "relationshipPanels": {
    "parents": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notChildren"
      ]
    },
    "children": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notParents"
      ],
      "dragDrop": {
        "isActive": true,
        "sortField": "sortOrder"
      }
    },
    "assetMetadata": {
      "view": "dam:views/asset/record/panels/asset-metadata",
      "create": false,
      "select": false,
      "rowActionsView": "views/record/row-actions/empty"
    }
  },
  "sidePanels": {
    "edit": [
      {
        "name": "preview",
        "label": "assetPreview",
        "view": "dam:views/asset/record/panels/side/preview/main"
      }
    ],
    "detail": [
      {
        "name": "preview",
        "label": "assetPreview",
        "view": "dam:views/asset/record/panels/side/preview/main"
      },
      {
        "name": "sharing",
        "label": "Sharing",
        "view": "views/record/panels/sharing"
      },
      {
        "name": "custom_download",
        "label": "Custom Download",
        "view": "dam:views/asset/record/panels/side/download/main"
      }
    ],
    "detailSmall": [
      {
        "name": "preview",
        "label": "assetPreview",
        "view": "dam:views/asset/record/panels/side/preview/main"
      },
      {
        "name": "sharing",
        "label": "Sharing",
        "view": "views/record/panels/sharing"
      }
    ],
    "editSmall": [
      {
        "name": "preview",
        "label": "assetPreview",
        "view": "dam:views/asset/record/panels/side/preview/main"
      }
    ]
  },
  "modalViews": {
    "select": "dam:views/asset/modals/select-records",
    "edit": "dam:views/asset/modals/edit"
  },
  "menu": {
    "list": {
      "buttons": [
        {
          "acl": "read",
          "name": "list",
          "label": "",
          "link": "#Asset/list",
          "title": "List",
          "iconHtml": "<span class=\"fa fa-list\"></span>"
        },
        {
          "acl": "read",
          "name": "plate",
          "label": "",
          "link": "#Asset/plate",
          "title": "Plate",
          "iconHtml": "<span class=\"fa fa-th\"></span>"
        }
      ]
    },
    "plate": {
      "buttons": [
        {
          "acl": "read",
          "name": "list",
          "label": "",
          "link": "#Asset/list",
          "title": "List",
          "iconHtml": "<span class=\"fa fa-list\"></span>"
        },
        {
          "acl": "read",
          "name": "plate",
          "label": "",
          "link": "#Asset/plate",
          "title": "Plate",
          "iconHtml": "<span class=\"fa fa-th\"></span>"
        }
      ]
    }
  },
  "dynamicLogic": {
    "fields": {
      "sortOrder": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isRoot"
            }
          ]
        }
      },
      "name": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "fileId"
            }
          ]
        }
      },
      "size": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    }
  }
}