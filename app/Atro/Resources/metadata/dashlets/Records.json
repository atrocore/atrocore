{
  "options": {
    "fields": {
      "title": {
        "type": "varchar",
        "required": true
      },
      "autorefreshInterval": {
        "type": "enumFloat",
        "prohibitedEmptyValue": true,
        "options": [
          0,
          0.5,
          1,
          2,
          5,
          10
        ]
      },
      "displayRecords": {
        "type": "enumInt",
        "prohibitedEmptyValue": true,
        "options": [
          3,
          4,
          5,
          10,
          15,
          20,
          30,
          50
        ]
      },
      "entityType": {
        "type": "enum",
        "view": "views/dashlets/fields/records/entity-type",
        "translation": "Global.scopeNames"
      },
      "entityFilter": {
        "type": "jsonObject",
        "view": "views/dashlets/fields/records/entity-filter"
      },
      "sortBy": {
        "type": "enum",
        "prohibitedEmptyValue": true,
        "view": "views/dashlets/fields/records/sort-by"
      },
      "sortDirection": {
        "type": "enum",
        "prohibitedEmptyValue": true,
        "view": "views/dashlets/fields/records/sort-direction",
        "options": [
          "asc",
          "desc"
        ],
        "translation": "EntityManager.options.sortDirection"
      }
    },
    "defaults": {
      "displayRecords": 10,
      "autorefreshInterval": 0.5,
      "expandedLayout": {
        "rows": []
      }
    },
    "layout": [
      {
        "rows": [
          [
            {
              "name": "title"
            }
          ],
          [
            {
              "name": "entityType"
            },
            false
          ],
          [
            {
              "name": "sortBy"
            },
            {
              "name": "sortDirection"
            }
          ],
          [
            {
              "name": "displayRecords"
            },
            {
              "name": "autorefreshInterval"
            }
          ],
          [
            {
              "name": "entityFilter",
              "fullWidth": true
            }
          ]
        ]
      }
    ]
  }
}