{
  "fields": {
    "name": {
      "type": "varchar",
      "notStorable": true,
      "protected": true
    },
    "updateMasterAutomatically": {
      "type": "bool",
      "default": false,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "masterEntity"
            }
          ]
        }
      }
    },
    "masterEntity": {
      "type": "varchar",
      "notStorable": true,
      "protected": true,
      "customizable": false,
      "layoutRemoveDisabled": true,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "masterEntity"
            }
          ]
        }
      }
    },
    "sourceEntity": {
      "type": "enum",
      "optionsType": "entityName",
      "options": [],
      "customizable": false,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "masterEntity"
            }
          ]
        },
        "protected": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "masterEntity"
            }
          ]
        }
      }
    },
    "mergingScript": {
      "type": "text",
      "view": "views/fields/script",
      "language": "json",
      "default": "{# { \"name\": \"{{ stagingRecord.name }}\" } #}",
      "editorActions": {
        "addFields": {
          "entityNameField": "masterEntity"
        },
        "addAttributes": {
          "entityNameField": "masterEntity"
        }
      },
      "twigVariables": [
        "stagingRecord",
        "masterRecord",
        "stagingRecords"
      ],
      "customizable": false,
      "layoutRemoveDisabled": true,
      "tooltip": true,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "masterEntity"
            }
          ]
        }
      }
    },
    "description": {
      "type": "text"
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  },
  "indexes": {
    "createdAt": {
      "columns": [
        "createdAt",
        "deleted"
      ]
    },
    "modifiedAt": {
      "columns": [
        "modifiedAt",
        "deleted"
      ]
    }
  }
}