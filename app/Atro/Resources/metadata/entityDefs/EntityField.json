              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        },
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "link",
                "linkMultiple"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "link",
                "linkMultiple"
              ]
            }
          ]
        }
      }
    },
    "isMultilang": {
      "type": "bool",
      "tooltip": true,
      "conditionalProperties": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isFalse",
              "attribute": "customizable"
            }
          ]
        },
        "visible": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "in",
                  "attribute": "type",
                  "value": [
                    "varchar",
                    "text",
                    "wysiwyg",
                    "markdown"
                  ]
                },
                {
                  "type": "and",
                  "value": [
                    {
                      "type": "equals",
                      "attribute": "type",
                      "value": "script"
                    },
                    {
                      "type": "equals",
                      "attribute": "outputType",
                      "value": "text"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "duplicateIgnore": {
      "type": "bool",
      "tooltip": true
