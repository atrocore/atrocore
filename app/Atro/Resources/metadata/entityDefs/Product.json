{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "isMultilang": true
    },
    "description": {
      "type": "text",
      "trim": true,
      "isMultilang": true
    },
    "longDescription": {
      "type": "wysiwyg",
      "trim": true,
      "isMultilang": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "children": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "noLoad": true
    },
    "parents": {
      "type": "linkMultiple",
      "view": "views/fields/hierarchy-parents"
    },
    "sortOrder": {
      "type": "int",
      "default": null,
      "massUpdateDisabled": true,
      "filterDisabled": true,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isRoot"
            }
          ]
        }
      }
    },
    "image": {
      "type": "file",
      "required": false,
      "fileTypeId": "a_image",
      "previewSize": "medium"
    },
    "number": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "index": true,
      "massUpdateDisabled": true,
      "inheritanceDisabled": true
    },
    "price": {
      "type": "float",
      "measureId": "currency"
    },
    "isActive": {
      "notNull": true,
      "type": "bool",
      "default": false
    },
    "quantity": {
      "type": "float",
      "min": 0,
      "default": 0
    },
    "productGroup": {
      "type": "link"
    },
    "customsNumber": {
      "type": "varchar",
      "len": 16
    },
    "countryOfOrigin": {
      "type": "link"
    },
    "defaultSupplier": {
      "type": "link"
    },
    "mpn": {
      "type": "varchar",
      "trim": true,
      "index": true,
      "inheritanceDisabled": true
    },
    "note": {
      "type": "text"
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "children": {
      "type": "hasMany",
      "relationName": "ProductHierarchy",
      "foreign": "parents",
      "entity": "Product",
      "disableMassRelation": true,
      "midKeys": [
        "entityId",
        "parentId"
      ]
    },
    "parents": {
      "type": "hasMany",
      "relationName": "ProductHierarchy",
      "foreign": "children",
      "entity": "Product",
      "disableMassRelation": true,
      "midKeys": [
        "parentId",
        "entityId"
      ]
    },
    "image": {
      "type": "belongsTo",
      "entity": "File",
      "skipOrmDefs": true
    },
    "productGroup": {
      "type": "belongsTo",
      "foreign": "products",
      "entity": "ProductGroup"
    },
    "countryOfOrigin": {
      "type": "belongsTo",
      "foreign": "products",
      "entity": "Country"
    },
    "defaultSupplier": {
      "type": "belongsTo",
      "foreign": "products",
      "entity": "Account"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false
  },
  "indexes": {
    "name": {
      "columns": [
        "name",
        "deleted"
      ]
    },
    "createdAt": {
      "columns": [
        "createdAt",
        "deleted"
      ]
    },
    "modifiedAt": {
      "columns": [
        "modifiedAt",
        "deleted"
      ]
    }
  }
}