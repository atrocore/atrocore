{
  "fields": {
    "name": {
      "type": "varchar",
      "notNull": true,
      "required": true,
      "trim": true
    },
    "mimeType": {
      "type": "varchar",
      "readOnly": true
    },
    "private": {
      "type": "bool",
      "default": false
    },
    "size": {
      "type": "float",
      "readOnly": true,
      "min": 0
    },
    "storage": {
      "type": "link",
      "required": true
    },
    "path": {
      "type": "varchar",
      "maxLength": 260,
      "default": null
    },
    "hash": {
      "type": "varchar",
      "readOnly": true,
      "index": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true
    }
  },
  "links": {
    "storage": {
      "type": "belongsTo",
      "foreign": "files",
      "entity": "Storage"
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false
  },
  "uniqueIndexes": {
    "unique_file": [
      "deleted",
      "name",
      "path",
      "storage_id"
    ]
  }
}
