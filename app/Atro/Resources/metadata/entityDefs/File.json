{
  "fields": {
    "name": {
      "type": "varchar",
      "view": "views/file/fields/name",
      "notNull": true,
      "required": true,
      "trim": true
    },
    "description": {
      "type": "text"
    },
    "preview": {
      "type": "varchar",
      "view": "views/file/fields/preview",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "importDisabled": true,
      "exportDisabled": true
    },
    "extension": {
      "type": "varchar",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "importDisabled": true,
      "exportDisabled": true
    },
    "downloadUrl": {
      "type": "varchar",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "importDisabled": true,
      "exportDisabled": true
    },
    "smallThumbnailUrl": {
      "type": "varchar",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "importDisabled": true,
      "exportDisabled": true
    },
    "mediumThumbnailUrl": {
      "type": "varchar",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "importDisabled": true,
      "exportDisabled": true
    },
    "largeThumbnailUrl": {
      "type": "varchar",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "importDisabled": true,
      "exportDisabled": true
    },
    "private": {
      "type": "bool",
      "default": false
    },
    "mimeType": {
      "type": "varchar",
      "readOnly": true
    },
    "fileSize": {
      "type": "int",
      "readOnly": true,
      "min": 0
    },
    "fileMtime": {
      "type": "datetime",
      "readOnly": true
    },
    "hash": {
      "type": "varchar",
      "readOnly": true,
      "index": true
    },
    "storage": {
      "type": "link",
      "required": true
    },
    "path": {
      "type": "text",
      "view": "views/fields/varchar",
      "readOnly": true,
      "default": null
    },
    "thumbnailsPath": {
      "type": "text",
      "view": "views/fields/varchar",
      "readOnly": true,
      "default": null
    },
    "type": {
      "type": "link",
      "required": false
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "storage": {
      "type": "belongsTo",
      "foreign": "files",
      "entity": "Storage"
    },
    "type": {
      "type": "belongsTo",
      "foreign": "files",
      "entity": "AssetType"
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  },
  "collection": {
    "sortBy": "fileMtime",
    "asc": false
  },
  "uniqueIndexes": {
    "unique_file": [
      "deleted",
      "name",
      "path",
      "storage_id"
    ]
  }
}
