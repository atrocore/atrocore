{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true
    },
    "layout": {
      "type": "link"
    },
    "sortOrder": {
      "type": "int"
    },
    "style": {
      "type": "enum",
      "options": [
        "default",
        "success",
        "danger",
        "primary",
        "info",
        "warning"
      ]
    },
    "sticked": {
      "type": "bool"
    },
    "disabled": {
      "type": "bool"
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "layout": {
      "type": "belongsTo",
      "entity": "Layout",
      "foreign": "sidePanelItems"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false
  }
}