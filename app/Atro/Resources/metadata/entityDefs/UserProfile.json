      "type": "email",
      "readOnly": true
    },
    "name": {
      "type": "varchar",
      "trim": true,
      "required": true
    },
    "department": {
      "type": "varchar",
      "trim": true
    },
    "firstName": {
      "type": "varchar",
      "maxLength": 100,
      "default": "",
      "trim": true
    },
    "lastName": {
      "type": "varchar",
      "maxLength": 100,
      "required": false,
      "default": "",
      "trim": true
    },
    "title": {
      "type": "varchar",
      "maxLength": 100,
      "trim": true
    },
    "phoneNumber": {
      "type": "varchar"
    },
    "gender": {
      "type": "extensibleEnum",
      "extensibleEnumId": "gender"
    },
    "locale": {
      "type": "link",
      "entity": "Locale"
    },
    "style": {
      "type": "link",
      "entity": "Style",
      "view": "views/user-profile/fields/style"
    },
    "followEntityOnStreamPost": {
      "type": "bool"
    },
    "followCreatedEntities": {
      "type": "bool",
      "tooltip": true
    },
    "receiveNotifications": {
      "type": "bool"
    },
    "notificationProfile": {
      "type": "link",
      "entity": "NotificationProfile",
      "view": "views/user-profile/fields/notification-profile"
    },
    "avatar": {
      "type": "file",
      "fileTypeId": "a_image",
      "view": "views/user/fields/avatar",
      "previewSize": "small"
    },
    "dashboardLayout": {
      "type": "jsonArray",
      "layoutListDisabled": true,
      "layoutDetailDisabled": true
    },
    "dashletsOptions": {
      "type": "jsonObject",
      "layoutListDisabled": true,
      "layoutDetailDisabled": true
    },
    "favoritesList": {
      "type": "array",
      "layoutListDisabled": true,
      "layoutDetailDisabled": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "lastAccess": {
      "type": "datetime",
      "readOnly": true
    }
