{
  "fields": {
    "code": {
      "type": "varchar",
      "unique": true,
      "required": true,
      "trim": true,
      "defaultValueType": "script",
      "default": "{% set number=recordsCount('MatchingRule') %}{% if number is empty%}{% set number = 1 %}{% else %}{% set number=number+1 %}{% endif %}rule-{{ number }}"
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "editable": {
      "type": "bool",
      "notStorable": true
    },
    "matching": {
      "type": "link",
      "conditionalProperties": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        },
        "visible": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "matchingRuleSetId"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "matchingRuleSetId"
            }
          ]
        }
      }
    },
    "weight": {
      "type": "int",
      "view": "views/matching-rule/fields/weight",
      "min": 0,
      "conditionalProperties": {
        "protected": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "set"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "equal",
                "like",
                "contains"
              ]
            }
          ]
        }
      }
    },
    "type": {
      "type": "enum",
      "required": true,
      "options": [
        "equal",
        "like",
        "contains",
        "set"
      ],
      "conditionalProperties": {
        "protected": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    },
    "field": {
      "type": "enum",
      "view": "views/matching-rule/fields/entity-field",
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "equal",
                "like",
                "contains"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "equal",
                "like",
                "contains"
              ]
            }
          ]
        }
      }
    },
    "matchingRuleSet": {
      "type": "link",
      "readOnly": true
    },
    "matchingRules": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "massUpdateDisabled": true,
      "noLoad": true,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "set"
            }
          ]
        }
      }
    },
    "operator": {
      "type": "enum",
      "options": [
        "and",
        "or"
      ],
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "set"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "set"
            }
          ]
        }
      }
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "matching": {
      "type": "belongsTo",
      "foreign": "matchingRules",
      "entity": "Matching"
    },
    "matchingRuleSet": {
      "type": "belongsTo",
      "foreign": "matchingRules",
      "entity": "Matching"
    },
    "matchingRules": {
      "type": "hasMany",
      "foreign": "matchingRuleSet",
      "entity": "MatchingRule"
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  },
  "collection": {
    "sortBy": "weight",
    "asc": false
  }
}