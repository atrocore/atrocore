{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true
    },
    "code": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "unique": true,
      "customizable": false
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "matching": {
      "type": "link",
      "required": true,
      "conditionalProperties": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    },
    "matchingType": {
      "type": "enum",
      "notStorable": true,
      "readOnly": true
    },
    "stageEntity": {
      "notStorable": true,
      "readOnly": true,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "matchingType",
              "value": "staging"
            }
          ]
        }
      }
    },
    "masterEntity": {
      "notStorable": true,
      "readOnly": true,
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "matchingType",
              "value": "staging"
            }
          ]
        }
      }
    },
    "weight": {
      "type": "int",
      "required": true,
      "min": 0,
      "default": 1
    },
    "type": {
      "type": "enum",
      "required": true,
      "options": [
        "like"
      ],
      "conditionalProperties": {
        "protected": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    },
    "targetField": {
      "type": "enum",
      "view": "views/matching-rule/fields/entity-field",
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "like"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "like"
              ]
            }
          ]
        }
      }
    },
    "sourceField": {
      "type": "enum",
      "view": "views/matching-rule/fields/entity-field",
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "like"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "like"
              ]
            }
          ]
        }
      }
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "matching": {
      "type": "belongsTo",
      "foreign": "matchingRules",
      "entity": "Matching"
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  }
}