{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true
    },
    "type": {
      "type": "varchar",
      "required": true,
      "view": "views/scheduled-job/fields/type",
      "conditionalProperties": {
        "protected": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    },
    "job": {
      "type": "varchar"
    },
    "isActive": {
      "type": "bool",
      "default": false
    },
    "scheduling": {
      "type": "varchar",
      "required": true,
      "default": "0 2 * * *",
      "tooltip": true
    },
    "lastRun": {
      "type": "datetime",
      "readOnly": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true
    },
    "storage": {
      "type": "link",
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "ScanStorage"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "ScanStorage"
            }
          ]
        }
      }
    },
    "jobs": {
      "type": "linkMultiple"
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "jobs": {
      "type": "hasMany",
      "entity": "Job",
      "foreign": "scheduledJob"
    },
    "storage": {
      "type": "belongsTo",
      "entity": "Storage"
    }
  },
  "collection": {
    "sortBy": "name",
    "asc": true
  }
}
