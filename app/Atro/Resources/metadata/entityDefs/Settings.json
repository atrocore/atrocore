{
  "fields": {
    "appId": {
      "type": "varchar",
      "readOnly": true
    },
    "isMultilangActive": {
      "type": "bool",
      "default": false
    },
    "disableActionHistory": {
      "type": "bool",
      "default": false
    },
    "useCache": {
      "type": "bool",
      "default": true
    },
    "onlyStableReleases": {
      "type": "bool"
    },
    "maxConcurrentWorkers": {
      "type": "int",
      "min": 4,
      "max": 50,
      "default": 6,
      "required": true,
      "tooltip": true
    },
    "recordsPerPage": {
      "type": "int",
      "min": 50,
      "max": 200,
      "default": 50,
      "required": true,
      "tooltip": true
    },
    "recordsPerPageSmall": {
      "type": "int",
      "min": 1,
      "max": 100,
      "default": 10,
      "required": true,
      "tooltip": true
    },
    "locale": {
      "type": "varchar",
      "required": true,
      "view": "views/settings/fields/locale"
    },
    "globalSearchEntityList": {
      "type": "multiEnum",
      "translation": "Global.scopeNames",
      "view": "views/settings/fields/global-search-entity-list"
    },
    "companyLogo": {
      "type": "file",
      "view": "views/settings/fields/company-logo",
      "tooltip": true
    },
    "favicon": {
      "type": "file",
      "fileTypeId": "a_favicon",
      "tooltip": true
    },
    "avatarsDisabled": {
      "type": "bool",
      "default": false
    },
    "adminPanelIframeUrl": {
      "type": "varchar"
    },
    "displayListViewRecordCount": {
      "type": "bool"
    },
    "userThemesDisabled": {
      "type": "bool",
      "tooltip": true
    },
    "authTokenLifetime": {
      "type": "float",
      "min": 0,
      "default": 0,
      "tooltip": true
    },
    "authTokenMaxIdleTime": {
      "type": "float",
      "min": 0,
      "default": 0,
      "tooltip": true
    },
    "authTokenPreventConcurrent": {
      "type": "bool",
      "tooltip": true
    },
    "dashletsOptions": {
      "type": "jsonObject",
      "disabled": true
    },
    "siteUrl": {
      "type": "varchar"
    },
    "applicationName": {
      "type": "varchar",
      "tooltip": true
    },
    "readableDateFormatDisabled": {
      "type": "bool"
    },
    "notificationSoundsDisabled": {
      "type": "bool"
    },
    "aclStrictMode": {
      "type": "bool",
      "tooltip": true
    },
    "lastViewedCount": {
      "type": "int",
      "min": 1,
      "max": 200,
      "default": 20,
      "required": true
    },

    "adminNotificationsNewVersion": {
      "type": "bool"
    },
    "textFilterUseContainsForVarchar": {
      "type": "bool",
      "tooltip": true
    },
    "scopeColorsDisabled": {
      "type": "bool"
    },
    "tabIconsDisabled": {
      "type": "bool"
    },
    "emailAddressIsOptedOutByDefault": {
      "type": "bool",
      "tooltip": true
    },
    "fileNameRegexPattern": {
      "type": "varchar",
      "default": "/^[^\\\\\\/:\\*\\\"\\?<>%|\\s,]{1,64}/",
      "tooltip": true
    },
    "passwordRegexPattern": {
      "type": "varchar",
      "default": "/^(?=.*[A-Z])(?=.*[\\W_])(?=.*\\d).{8,}$/",
      "tooltip": true,
      "view": "views/settings/fields/password-regex-pattern"
    },
    "passwordExpireDays": {
      "type": "int",
      "default": 0,
      "min": 0,
      "tooltip": true
    },
    "variables": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "noLoad": true
    },
    "customStylesheetPath": {
      "type": "varchar",
      "readOnly": true,
      "tooltip": true
    },
    "customStylesheet": {
      "type": "text",
      "view": "views/fields/script",
      "language": "css"
    },
    "customHeadCode": {
      "type": "text",
      "view": "views/fields/script",
      "language": "html",
      "tooltip": true,
      "notStorable": true
    },
    "customHeadCodePath": {
      "type": "varchar",
      "readOnly": true
    },
    "notificationSmtpConnection": {
      "type": "link",
      "view": "views/admin/notification/fields/notification-smtp-connection"
    },
    "defaultNotificationProfile": {
      "type": "link",
      "conditionalProperties": {
        "required": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "sendOutNotifications"
            }
          ]
        }
      }
    },
    "sendOutNotifications": {
      "type": "bool"
    },
    "defaultStyle": {
      "type": "link",
      "view": "views/settings/fields/style"
    },
    "automaticFileExtensionCorrection": {
      "type": "bool"
    },
    "favoritesIconsDisabled": {
      "type": "bool",
      "default": false
    },
    "backgrounds": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutMassUpdateDisabled": true,
      "filterDisabled": true,
      "noLoad": true
    },
    "disableToolbarLogo": {
      "type": "bool",
      "default": false
    }
  },
  "links": {
    "variables": {
      "type": "hasMany",
      "entity": "Variable"
    },
    "backgrounds": {
      "type": "hasMany",
      "entity": "Background"
    },
    "notificationSmtpConnection": {
      "type": "belongsTo",
      "entity": "Connection"
    },
    "defaultNotificationProfile": {
      "type": "belongsTo",
      "entity": "NotificationProfile"
    },
    "defaultStyle": {
      "type": "belongsTo",
      "entity": "Style"
    }
  }
}
