{
  "fields": {
    "number": {
      "type": "autoincrement"
    },
    "entity": {
      "type": "enum",
      "view": "views/fields/entity-type",
      "conditionalProperties": {
        "visible": {
          "conditionGroup": [
            {
              "attribute": "type",
              "type": "equals",
              "value": "single"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "attribute": "type",
              "type": "equals",
              "value": "single"
            }
          ]
        },
        "protected": {
          "conditionGroup": [
            {
              "attribute": "type",
              "type": "equals",
              "value": "single"
            },
            {
              "type": "isNotEmpty",
              "attribute": "id"
            },
            {
              "attribute": "entity",
              "type": "isNotEmpty"
            }
          ]
        }
      }
    },
    "description": {
      "type": "text"
    },
    "selectionRecords": {
      "type": "linkMultiple",
      "auditableEnabled": true
    },
    "type": {
      "type": "enum",
      "required": true,
      "options": ["single", "multiple"],
      "conditionalProperties": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "multiple"
            },
            {
              "type": "greaterThan",
              "attribute": "entityTypesCount",
              "value": 0
            }
          ]
        }
      }
    },
    "entityTypes": {
      "type": "jsonArray",
      "readOnly": true,
      "notStorable": true,
      "filterDisabled": true
    },
    "entityTypesCount": {
      "type": "int",
      "readOnly": true,
      "notStorable": true,
      "filterDisabled": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true
    }
  },
  "links": {
    "selectionRecords": {
      "type": "hasMany",
      "entity": "SelectionRecord",
      "foreign": "selection"
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  }
}