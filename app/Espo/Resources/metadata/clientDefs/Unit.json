{
  "controller": "controllers/record",
  "views": {
    "list": "views/unit/list",
    "detail": "views/unit/detail"
  },
  "boolFilterList": [
    "onlyMy",
    "assignedToMe",
    "ownedByMe",
    "notEntity",
    "fromMeasure"
  ],
  "hiddenBoolFilterList": [
    "notEntity",
    "fromMeasure"
  ],
  "iconClass": "fas fa-ruler",
  "dynamicLogic": {
    "fields": {
      "multiplier": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isDefault"
            }
          ]
        }
      },
      "isDefault": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        },
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isDefault"
            }
          ]
        }
      }
    }
  }
}