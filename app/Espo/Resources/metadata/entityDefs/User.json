{
    "fields": {
        "type": {
            "type": "enum",
            "default": "Token",
            "options": [
                "Token"
            ],
            "optionsIds": [
                "Token"
            ]
        },
        "account": {
            "type": "link"
        },
        "isAdmin": {
            "type": "bool",
            "tooltip": true
        },
        "userName": {
            "type": "varchar",
            "maxLength": 50,
            "required": true,
            "view": "views/user/fields/user-name",
            "tooltip": true
        },
        "name": {
            "type": "varchar",
            "view": "treo-core:views/user/fields/name",
            "trim": true,
            "required": true
        },
        "department": {
            "type": "varchar",
            "trim": true
        },
        "password": {
            "type": "password",
            "maxLength": 150,
            "internal": true,
            "disabled": true,
            "tooltip": true
        },
        "passwordConfirm": {
            "type": "password",
            "maxLength": 150,
            "internal": true,
            "disabled": true,
            "notStorable": true,
            "tooltip": true
        },
        "firstName": {
            "type": "varchar",
            "maxLength": 100,
            "default":"",
            "trim": true
        },
        "lastName": {
            "type": "varchar",
            "maxLength": 100,
            "required": false,
            "default":"",
            "trim": true
        },
        "isActive": {
            "type": "bool",
            "tooltip": true,
            "default": true
        },
        "isPortalUser": {
            "type": "bool",
            "massUpdateDisabled": true
        },
        "isSuperAdmin": {
            "type": "bool",
            "default": false,
            "disabled": true
        },
        "title": {
            "type": "varchar",
            "maxLength": 100,
            "trim": true
        },
        "position": {
            "type": "varchar",
            "maxLength": 100,
            "notStorable": true,
            "where": {
                "LIKE": {
                    "leftJoins": [["teams", "teamsPosition"]],
                    "sql": "teamsPositionMiddle.role LIKE {value}",
                    "distinct": true
                },
                "=": {
                    "leftJoins": [["teams", "teamsPosition"]],
                    "sql": "teamsPositionMiddle.role = {value}",
                    "distinct": true
                },
                "<>": {
                    "leftJoins": [["teams", "teamsPosition"]],
                    "sql": "teamsPositionMiddle.role <> {value}",
                    "distinct": true
                },
                "IS NULL": {
                    "leftJoins": [["teams", "teamsPosition"]],
                    "sql": "teamsPositionMiddle.role IS NULL",
                    "distinct": true
                },
                "IS NOT NULL": {
                    "leftJoins": [["teams", "teamsPosition"]],
                    "sql": "teamsPositionMiddle.role IS NOT NULL",
                    "distinct": true
                }
            },
            "trim": true,
            "layoutDetailDisabled": true,
            "layoutListDisabled": true,
            "textFilterDisabled": true
        },
        "emailAddress": {
            "type": "email",
            "required": true
        },
        "phoneNumber": {
            "type": "varchar"
        },
        "token": {
            "type": "varchar",
            "notStorable": true,
            "disabled": true
        },
        "authTokenId": {
            "type": "varchar",
            "notStorable": true,
            "disabled": true
        },
        "authLogRecordId": {
            "type": "varchar",
            "notStorable": true,
            "disabled": true
        },
        "ipAddress": {
            "type": "varchar",
            "notStorable": true,
            "disabled": true
        },
        "defaultTeam": {
            "type": "link",
            "tooltip": true
        },
        "acceptanceStatus": {
            "type": "varchar",
            "notStorable": true,
            "disabled": true
        },
        "teamRole": {
            "type": "varchar",
            "notStorable": true,
            "disabled": true
        },
        "teams": {
            "type": "linkMultiple",
            "tooltip": true,
            "columns": {
                "role": "userRole"
            },
            "view": "views/user/fields/teams",
            "default": "javascript: return {teamsIds: []}"
        },
        "roles": {
            "type": "linkMultiple",
            "tooltip": true
        },
        "portal": {
            "type": "link"
        },
        "portalRoles": {
            "type": "linkMultiple",
            "tooltip": true
        },
        "avatar": {
            "type": "image",
            "view": "views/user/fields/avatar",
            "previewSize": "small"
        },
        "sendAccessInfo": {
            "type": "bool",
            "notStorable": true,
            "disabled": true
        },
        "gender": {
            "type": "enum",
            "optionsIds": ["", "Male", "Female", "Neutral"],
            "options": ["", "Male", "Female", "Neutral"],
            "default": ""
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "lastAccess": {
            "type": "datetime",
            "notStorable": true,
            "readOnly": true,
            "layoutListDisabled": true,
            "filterDisabled": true,
            "massUpdateDisabled": true,
            "layoutDetailDisabled": true,
            "directAccessDisabled": true
        }
    },
    "links": {
        "account": {
            "type": "belongsTo",
            "entity": "Account",
            "foreign": "portalUsers",
            "relationName": "AccountPortalUser"
        },
        "defaultTeam": {
            "type": "belongsTo",
            "entity": "Team"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "foreign": "users",
            "additionalColumns": {
                "role": {
                    "type": "varchar",
                    "len": 100
                }
            },
            "layoutRelationshipsDisabled": true
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "roles": {
            "type": "hasMany",
            "entity": "Role",
            "foreign": "users",
            "layoutRelationshipsDisabled": true
        },
        "portal": {
            "type": "belongsTo",
            "entity": "Portal",
            "foreign": "users"
        },
        "portalRoles": {
            "type": "hasMany",
            "entity": "PortalRole",
            "foreign": "users",
            "layoutRelationshipsDisabled": true
        },
        "preferences": {
            "type": "hasOne",
            "entity": "Preferences"
        },
        "notes": {
            "type": "hasMany",
            "entity": "Note",
            "foreign": "users",
            "layoutRelationshipsDisabled": true
        }
    },
    "collection": {
        "sortBy": "userName",
        "asc": true,
        "textFilterFields": ["name", "userName"]
    }
}
