                                        <div class="field hidden" data-name="file"><div class="attachment-upload">
                                                <div class="attachment-button">
                                                    <div class="pull-left">
                                                        <label class="attach-file-label" title="Attach File">
                                                            <span class="btn btn-default btn-icon"><span class="glyphicon glyphicon-paperclip"></span></span>
                                                            <input type="file" class="file pull-right">
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="attachment"></div>
                                            </div>
                                        </div>
                                    </div>






                                    <div class="cell col-sm-6 form-group" data-name="private">
                                        <label class="control-label" data-name="private"><span class="label-text">private</span></label>
                                        <div class="field" data-name="private"><input type="checkbox" name="private" class="main-element">
                                        </div>
                                    </div>


                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="extra"></div>
                    <div class="bottom"></div>
                </div>
            </div>
        </div>
    </div>
</div>
